<!DOCTYPE <html>
<html>

<head>
    <title>G4-Goofy</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="./images/favicon.ico" rel="shortcut icon">

    <link href="stylesheets/bootstrap.min.css" rel="stylesheet" media="screen">
    <link href="stylesheets/bootstrap-responsive.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="stylesheets/style_login.css" rel="stylesheet" media="screen">
    <link href="stylesheets/megamenu.css" rel="stylesheet" type="text/css" media="all" />

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js "></script>
    <script src="javascripts/bootstrap.min.js "></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js "></script>
</head>

<body>
    <div id="wrapper">
        <header>
            <% include ./partials/header-other.ejs %>
        </header>
        <div class="container">
            <ul class="breadcrumb">
                <li><a href="index.htm">Trang chủ</a> <span class="divider"></span></li>
                <li class="active">Đăng nhập</li>
            </ul>
            <div id="wrapper-login">
                <h1>Đăng nhập</h1>
                <hr>
                <!-- ĐĂNG NHẬP = FB OR GG. TÍNH SAU =]] -->
                <!-- <div class="social-login">
                    <a href="#">
                        <i class="fa fa-facebook fa-lg"></i> <b> FACEBOOK </b>
                    </a>
                    <a href="#">
                        <i class="fa fa-google-plus fa-lg"></i> <b> GOOGLE </b>
                    </a>
                </div>
                <hr> -->
                <% if (messages.length > 0) { %>
                    <div class="alert alert-danger">
                        <% messages.forEach(function(message){ %>
                            <p><%= message %></p> 
                        <% }) %>
                    </div>
                <% } %>
                <form class="form-login" action="/login" method="post">
                    <p>
                        <label for="username" data-icon="e"> Email <span>*</span>:</label>
                        <input id="username" name="email" required="required" type="email" placeholder="Nhập email của bạn" />
                    </p>
                    <p>
                        <label for="password" data-icon="p"> Mật khẩu <span>*</span>: </label>
                        <input id="password" name="password" required="required" type="password" placeholder="Nhập mật khẩu của bạn" />
                    </p>
                    <input class="register-2" name="name" type="hidden" value="nothing"/>
                    <input class="register-2" name="gender" type="hidden" value="nothing"/>
                    <input class="register-2" name="day" type="hidden" value="nothing"/>
                    <input class="register-2" name="month" type="hidden" value="nothing"/>
                    <input class="register-2" name="year" type="hidden" value="nothing"/>
                    <input class="register-2" name="address" type="hidden" value="nothing"/>
                    <input class="register-2" name="telephone" type="hidden" value="nothing"/>
                    <p class="keeplogin">
                        <input type="checkbox" name="loginkeeping" id="loginkeeping" value="loginkeeping" />
                        <label for="loginkeeping">Ghi nhớ đăng nhập</label>
                    </p>
                    <input type="hidden" value="<%= csrfToken%>" name="_csrf"/>
                    <p class="login button">
                        <input type="submit" value="Đăng nhập" />
                    </p>
                    <p class="change_link">
                        <b>Chưa có tài khoản ?</b>
                        <a href="/register" class="to_register">Đăng ký</a>
                    </p>
                </form>
            </div>
        </div>
        <footer>
            <% include ./partials/footer.ejs %>
        </footer>
    </div>
</body>

</html>