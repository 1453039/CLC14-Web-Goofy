                        <option value="1984">1984</option>
                        <option value="1983">1983</option>
                        <option value="1982">1982</option>
                        <option value="1981">1981</option>
                        <option value="1980">1980</option>
                     </select>
                    </p>
                    <p>
                        <label class="register" id="address1" for="address"> Địa chỉ <span>*</span>:</label>
                        <textarea name="address" required="required" id="address2"></textarea>
                    </p>
                    <p>
                        <label class="register" for="telephone"> Số điện thoại <span>*</span>:</label>
                        <input class="register-2" name="telephone" required="required" type="tel" />
                    </p>
                    <input type="hidden" value="<%= csrfToken%>" name="_csrf"/>
                    <p class="login button">
                        <input type="submit" value="Đăng ký" />
                    </p>
                </form>
            </div>
        </div>
        <footer>
            <% include ./partials/footer.ejs %>
        </footer>
    </div>
</body>

</html>